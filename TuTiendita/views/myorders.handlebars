<div class="container" id="container5" style="width: 90%; margin: 10px;">
    <div class="accordion" id="accordionExample">

        {{#each customerOrders as |order|}}

        <div class="accordion-item">
            <h2 class="accordion-header" id="heading{{order.id}}">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{order.id}}"
                    aria-expanded="true" aria-controls="collapse{{order.id}}">
                    Order number #{{order.id}}
                </button>
            </h2>
            <div id="collapse{{order.id}}" class="accordion-collapse collapse" aria-labelledby="heading{{order.id}}"
                data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>Status:</strong><br>
                    {{order.status}}<br>
                    <strong>Store name:</strong><br>
                    {{order.store_name}}<br>
                    <strong>Address for delivery:</strong><br>
                    {{order.address1}}<br>
                    <strong>Products bought:</strong><br>
                    {{order.quantity}}<br>
                    <strong>Total price:</strong><br>
                    {{order.total}}<br><br>
                </div>
            </div>
        </div>
        {{/each}}

    </div>

</div>

